
@{
}

﻿<div class="row">
    <div class="col-12">
        <form action="/cuenta/create" method="post">
            <div class="form-group">
                <label>NOMBRE</label>
                <input type="text" name="nombre" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("nombre")
            </div>
            <div class="form-group">
                <label>CATEGORIA</label>
                <select class="form-select" name="categoria">
                  <option value="credito">CREDITO</option>
                  <option value="propio">PROPIO</option>
                </select>
                @Html.ValidationMessage("categoria")
            </div>
            <div class="form-group">
                <label>SALDO INICIAL</label>
                <input type="text" name="saldoini" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("saldoini")
            </div>
            <div class="form-group">
                <label>MONEDA</label>
                <select class="form-select" name="moneda">
                  <option value="D">DOLARES</option>
                  <option value="S">SOLES</option>
                </select>
                @Html.ValidationMessage("moneda")
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
